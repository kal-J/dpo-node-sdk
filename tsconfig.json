{
  "compilerOptions": {
    "target": "ES5",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    // "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
